{
	"swagger": "2.0",
	"info": {
		"title": "SharePoint List Items",
		"description": "API for SharePoint List Items",
		"version": "1.0.0.0"
	},
	"host": "demo.traveport-test.de",
	"schemes": ["https"],
	"paths": {
		"/{SiteUrl}/_api/web/lists/GetByTitle('{ListTitle}')/GetItemById({ItemId})": {
			"get": {
				"tags": ["Sites"],
				"description": "Get list item",
				"operationId": "GetListItem",
				"produces": ["application/json"],
				"parameters": [{
						"name": "SiteUrl",
						"in": "path",
						"description": "Site specific portion of URL, typically same as Site Title, including managed path",
						"required": true,
						"type": "string",
						"x-example": "Sales"
					}, {
						"name": "ListTitle",
						"in": "path",
						"description": "List title",
						"required": true,
						"type": "string",
						"x-example": "Documents"
					}, {
						"name": "ItemId",
						"in": "path",
						"description": "Item Id",
						"required": true,
						"type": "integer",
                        "format": "int32"
					}
				],
				"responses": {
					"200": {
						"description": "Get list item by Site URL, List Title and List Item Id",
						"schema": {
							"$ref": "#/definitions/GetListItem"
						}
					}
				}
			}
			
		}
	},
	"definitions": {
		"GetListItem": {
			"x-k2-displayName": "Get List Item Metadata",
			"description": "Model for retrieving list item metadata",
			"required": ["Id"],
			"properties": {
				"Id": {
					"type": "integer",
					"format": "int32",
					"x-example": "1"
				},
				"Title": {
					"type": "string",
					"x-example": "Test deck"
				}
			}
		}
	},
	"tags": [{
			"name": "Sites",
			"description": "Operations about Sites"
		}
	]

}
