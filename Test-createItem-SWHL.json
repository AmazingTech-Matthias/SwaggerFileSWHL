{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "SharePoint Create List Item API",
    "description": "API to create a new item in a specific SharePoint list"
  },
  "host": "demo.traveport-test.de/",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json;odata=verbose"
  ],
  "produces": [
    "application/json;odata=verbose"
  ],
  "paths": {
    "/sites/{siteCollection}/_api/web/lists/GetByTitle('{listName}')/items": {
      "post": {
        "summary": "Create new list item",
        "description": "Creates a new item in the specified SharePoint list",
        "operationId": "CreateListItem",
        "parameters": [
		   {
            "name": "siteCollection",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Name of the SharePoint site collection"
          },
          {
            "name": "listName",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Title of the SharePoint list"
          },
          {
            "name": "Accept",
            "in": "header",
            "required": true,
            "type": "string",
            "default": "application/json;odata=verbose"
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "type": "string",
            "default": "application/json;odata=verbose"
          },
          {
            "name": "X-RequestDigest",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Form Digest value required for POST operations"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateItem"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item created successfully",
            "schema": {
              "$ref": "#/definitions/CreateItemResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "CreateItem": {
      "type": "object",
      "required": [
        "__metadata",
        "Title"
      ],
      "properties": {
        "__metadata": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "example": "SP.Data.YourListListItem"
            }
          }
        },
        "Title": {
          "type": "string",
          "example": "New Item Title"
        },
        "Description": {
          "type": "string",
          "example": "Item description here"
        }
      }
    },
    "CreateItemResponse": {
      "type": "object",
      "properties": {
        "d": {
          "type": "object",
          "properties": {
            "Id": {
              "type": "integer",
              "example": 1
            },
            "Title": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}